<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Visit Tree View -->
    <record id="hr_hospital_visit_view_tree" model="ir.ui.view">
        <field name="name">hr.hospital.visit.view.tree</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <tree decoration-info="status == 'scheduled'" 
                  decoration-success="status == 'completed'"
                  decoration-danger="status == 'cancelled'"
                  decoration-muted="status == 'no_show'">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="scheduled_date"/>
                <field name="actual_date"/>
                <field name="visit_type"/>
                <field name="status"/>
                <field name="cost" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Visit Form View -->
    <record id="hr_hospital_visit_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.visit.view.form</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" 
                           statusbar_visible="scheduled,completed,cancelled,no_show"/>
                </header>
                <sheet>
                    <group>
                        <group string="Visit Information">
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="visit_type"/>
                        </group>
                        <group string="Doctor Filters">
                            <field name="specialization_filter_id"/>
                            <field name="available_date_filter"/>
                        </group>
                        <group string="Schedule">
                            <field name="scheduled_date"/>
                            <field name="actual_date" 
                                   readonly="status != 'completed'"/>
                        </group>
                        <group string="Payment">
                            <field name="currency_id" invisible="1"/>
                            <field name="cost"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Diagnoses">
                            <field name="diagnosis_ids">
                                <tree editable="bottom"
                                      decoration-success="is_approved == True"
                                      decoration-warning="severity in ['moderate', 'severe']"
                                      decoration-danger="severity == 'critical'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="disease_id"/>
                                    <field name="diagnosis_type"/>
                                    <field name="severity"/>
                                    <field name="is_approved" widget="boolean_toggle"/>
                                    <field name="approved_by_id" optional="hide"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>                        <page string="Recommendations">
                            <field name="recommendations" 
                                   placeholder="Medical recommendations..."/>
                        </page>
                        <page string="Legacy Data" groups="base.group_no_one">
                            <group>
                                <field name="disease_id"/>
                                <field name="diagnosis"/>
                                <field name="prescription"/>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_visit_view_calendar" model="ir.ui.view">
        <field name="name">hr.hospital.visit.view.calendar</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <calendar date_start="scheduled_date" color="doctor_id" event_open_popup="true">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="status"/>
            </calendar>
        </field>
    </record>

    <record id="hr_hospital_visit_view_pivot" model="ir.ui.view">
        <field name="name">hr.hospital.visit.view.pivot</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <pivot display_quantity="1">
                <field name="doctor_id" type="row"/>
                <field name="status" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Visit Action -->
    <record id="hr_hospital_visit_action" model="ir.actions.act_window">
        <field name="name">Visits</field>
        <field name="res_model">hr.hospital.visit</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <record id="hr_hospital_visit_pivot_action" model="ir.actions.act_window">
        <field name="name">Visits Pivot (This Month)</field>
        <field name="res_model">hr.hospital.visit</field>
        <field name="view_mode">pivot</field>
        <field name="context">{'search_default_filter_current_month': 1}</field>
    </record>
</odoo>
