<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Visit Tree View -->
    <record id="hr_hospital_visit_view_tree" model="ir.ui.view">
        <field name="name">hr.hospital.visit.view.tree</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <tree decoration-info="status == 'scheduled'" 
                  decoration-success="status == 'completed'"
                  decoration-danger="status == 'cancelled'"
                  decoration-muted="status == 'no_show'">
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="scheduled_date"/>
                <field name="actual_date"/>
                <field name="visit_type"/>
                <field name="status"/>
                <field name="cost" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Visit Form View -->
    <record id="hr_hospital_visit_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.visit.view.form</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" 
                           statusbar_visible="scheduled,completed"/>
                </header>
                <sheet>
                    <group>
                        <group string="Visit Information">
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="visit_type"/>
                        </group>
                        <group string="Schedule">
                            <field name="scheduled_date"/>
                            <field name="actual_date" 
                                   readonly="status != 'completed'"/>
                        </group>
                        <group string="Payment">
                            <field name="currency_id" invisible="1"/>
                            <field name="cost"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Diagnoses">
                            <field name="diagnosis_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="disease_id"/>
                                    <field name="diagnosis_type"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Recommendations">
                            <field name="recommendations" 
                                   placeholder="Medical recommendations..."/>
                        </page>
                        <page string="Legacy Data" groups="base.group_no_one">
                            <group>
                                <field name="disease_id"/>
                                <field name="diagnosis"/>
                                <field name="prescription"/>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Visit Action -->
    <record id="hr_hospital_visit_action" model="ir.actions.act_window">
        <field name="name">Visits</field>
        <field name="res_model">hr.hospital.visit</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
