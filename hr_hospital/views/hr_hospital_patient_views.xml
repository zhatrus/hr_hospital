<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Patient Tree View -->
    <record id="hr_hospital_patient_view_tree" model="ir.ui.view">
        <field name="name">hr.hospital.patient.view.tree</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="full_name"/>
                <field name="date_of_birth"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="doctor_id"/>
            </tree>
        </field>
    </record>

    <!-- Patient Form View -->
    <record id="hr_hospital_patient_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient.view.form</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_visit"
                            string="New Visit"
                            type="object"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="full_name" readonly="1"/>
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_visits"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-calendar">
                            <field name="visit_count" widget="statinfo" string="Visits"/>
                        </button>
                        <button name="action_view_diagnoses"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-stethoscope">
                            <field name="diagnosis_count" widget="statinfo" string="Diagnoses"/>
                        </button>
                    </div>
                    <group>
                        <group string="Personal Information">
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="age" readonly="1"/>
                            <field name="passport_data"/>
                        </group>
                        <group string="Contact Information">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                            <field name="primary_contact_id"/>
                        </group>
                        <group string="Medical Information">
                            <field name="doctor_id"/>
                            <field name="blood_type"/>
                        </group>
                        <group string="Insurance">
                            <field name="insurance_company_id"/>
                            <field name="insurance_policy_number"/>
                        </group>
                    </group>
                    <separator string="Address"/>
                    <div class="o_row">
                        <div class="o_col_12">
                            <field name="address" nolabel="1"/>
                        </div>
                    </div>
                    <separator string="Allergies"/>
                    <div class="o_row">
                        <div class="o_col_12">
                            <field name="allergies" nolabel="1" 
                                   placeholder="List all known allergies..."/>
                        </div>
                    </div>
                    <notebook>
                        <page string="Visits">
                            <field name="visit_ids">
                                <tree>
                                    <field name="doctor_id"/>
                                    <field name="scheduled_date"/>
                                    <field name="status"/>
                                    <field name="visit_type"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Diagnoses">
                            <field name="diagnosis_ids" readonly="1">
                                <tree>
                                    <field name="visit_date"/>
                                    <field name="doctor_id"/>
                                    <field name="disease_id"/>
                                    <field name="diagnosis_type"/>
                                    <field name="severity"/>
                                    <field name="is_approved"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Contact Persons">
                            <field name="contact_person_ids">
                                <tree>
                                    <field name="full_name"/>
                                    <field name="relationship"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <field name="is_emergency_contact"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Doctor History">
                            <field name="doctor_history_ids">
                                <tree decoration-success="is_current == True">
                                    <field name="doctor_id"/>
                                    <field name="assignment_date"/>
                                    <field name="end_date"/>
                                    <field name="is_current" invisible="1"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Patient Action -->
    <record id="hr_hospital_patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hr.hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
