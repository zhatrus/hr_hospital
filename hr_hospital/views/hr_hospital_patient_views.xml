<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Patient Tree View -->
    <record id="hr_hospital_patient_view_tree" model="ir.ui.view">
        <field name="name">hr.hospital.patient.view.tree</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="full_name"/>
                <field name="date_of_birth"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="doctor_id"/>
            </tree>
        </field>
    </record>

    <!-- Patient Form View -->
    <record id="hr_hospital_patient_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient.view.form</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="full_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Personal Information">
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="age" readonly="1"/>
                        </group>
                        <group string="Contact Information">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>
                        <group string="Medical Information">
                            <field name="doctor_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="address"/>
                    </group>
                    <notebook>
                        <page string="Visits">
                            <field name="visit_ids">
                                <tree>
                                    <field name="doctor_id"/>
                                    <field name="visit_date"/>
                                    <field name="disease_id"/>
                                    <field name="diagnosis"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Patient Action -->
    <record id="hr_hospital_patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hr.hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
