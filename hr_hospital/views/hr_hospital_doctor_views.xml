<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Doctor Tree View -->
    <record id="hr_hospital_doctor_view_tree" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.view.tree</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="full_name"/>
                <field name="specialization"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
            </tree>
        </field>
    </record>

    <!-- Doctor Form View -->
    <record id="hr_hospital_doctor_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.view.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="full_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Personal Information">
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="age" readonly="1"/>
                        </group>
                        <group string="Contact Information">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>
                        <group string="Professional Information">
                            <field name="specialization"/>
                            <field name="is_intern"/>
                            <field name="mentor_id" invisible="not is_intern"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Interns" invisible="is_intern">
                            <field name="intern_ids">
                                <tree>
                                    <field name="full_name"/>
                                    <field name="specialization"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Patients">
                            <field name="patient_ids">
                                <tree>
                                    <field name="full_name"/>
                                    <field name="phone"/>
                                    <field name="age"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Visits">
                            <field name="visit_ids">
                                <tree>
                                    <field name="patient_id"/>
                                    <field name="visit_date"/>
                                    <field name="disease_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Doctor Action -->
    <record id="hr_hospital_doctor_action" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
