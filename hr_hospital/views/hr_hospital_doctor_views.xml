<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Doctor Tree View -->
    <record id="hr_hospital_doctor_view_tree" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.view.tree</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="full_name"/>
                <field name="specialization_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
            </tree>
        </field>
    </record>

    <!-- Doctor Form View -->
    <record id="hr_hospital_doctor_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.view.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="full_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Personal Information">
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="age" readonly="1"/>
                        </group>
                        <group string="Contact Information">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>
                        <group string="Professional Information">
                            <field name="specialization_id"/>
                            <field name="is_intern"/>
                            <field name="rating"/>
                        </group>
                        <group string="Mentor" invisible="not is_intern">
                            <field name="mentor_id"/>
                            <field name="mentor_specialization_id"/>
                            <field name="mentor_phone"/>
                            <field name="mentor_email"/>
                        </group>
                        <group string="License &amp; Experience">
                            <field name="license_number"/>
                            <field name="license_issue_date"/>
                            <field name="years_of_experience" readonly="1"/>
                            <field name="education_country_id"/>
                        </group>
                        <group string="System Access">
                            <field name="user_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Interns" invisible="is_intern">
                            <field name="intern_ids">
                                <kanban>
                                    <field name="full_name"/>
                                    <field name="specialization_id"/>
                                    <field name="phone"/>
                                    <field name="image_1920"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <field name="image_1920" widget="image" class="o_kanban_avatar"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong>
                                                        <field name="full_name"/>
                                                    </strong>
                                                    <div>
                                                        <field name="specialization_id"/>
                                                    </div>
                                                    <div>
                                                        <field name="phone"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Patients">
                            <field name="patient_ids">
                                <tree>
                                    <field name="full_name"/>
                                    <field name="phone"/>
                                    <field name="age"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Visits">
                            <field name="visit_ids">
                                <tree>
                                    <field name="patient_id"/>
                                    <field name="visit_date"/>
                                    <field name="disease_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Work Schedule">
                            <field name="schedule_ids">
                                <tree editable="bottom" decoration-muted="schedule_type != 'working_day'">
                                    <field name="date"/>
                                    <field name="day_of_week"/>
                                    <field name="schedule_type"/>
                                    <field name="time_from" widget="float_time"/>
                                    <field name="time_to" widget="float_time"/>
                                    <field name="notes"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctor_view_kanban" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.view.kanban</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="id"/>
                <field name="full_name"/>
                <field name="last_name"/>
                <field name="first_name"/>
                <field name="specialization_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="rating"/>
                <field name="is_intern"/>
                <field name="intern_ids"/>
                <field name="image_1920"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <!-- Dropdown menu -->
                            <div class="oe_kanban_bottom_right">
                                <div class="oe_kanban_bottom_left">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                            </div>
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            
                            <!-- Avatar -->
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('hr.hospital.doctor', 'image_1920', record.id.raw_value)" alt="Doctor" class="o_kanban_image_inner_pic"/>
                            </div>
                            
                            <!-- Content -->
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="last_name"/> <field name="first_name"/>
                                        </strong>
                                    </div>
                                </div>
                                
                                <!-- Спеціальність -->
                                <div class="o_kanban_record_body">
                                    <field name="specialization_id"/>
                                </div>
                                
                                <!-- Список інтернів (якщо лікар - ментор) -->
                                <div t-if="record.intern_ids.raw_value.length > 0 and !record.is_intern.raw_value" class="mt-2">
                                    <strong>Інтерни:</strong>
                                    <ul class="mb-0 ps-3">
                                        <t t-foreach="record.intern_ids.raw_value.slice(0, 3)" t-as="intern_id">
                                            <li class="small text-muted">
                                                <t t-esc="intern_id"/>
                                            </li>
                                        </t>
                                        <li t-if="record.intern_ids.raw_value.length > 3" class="small text-muted">
                                            + <t t-esc="record.intern_ids.raw_value.length - 3"/> більше
                                        </li>
                                    </ul>
                                </div>
                                
                                <!-- Footer -->
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.phone.raw_value" class="text-muted small">
                                            <i class="fa fa-phone"/> <field name="phone"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-if="record.rating.raw_value" class="badge bg-info">
                                            <i class="fa fa-star"/> <field name="rating"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Doctor Action -->
    <record id="hr_hospital_doctor_action" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'group_by': 'specialization_id'}</field>
    </record>
</odoo>
