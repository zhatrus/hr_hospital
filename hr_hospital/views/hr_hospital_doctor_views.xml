<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Doctor Tree View -->
    <record id="hr_hospital_doctor_view_tree" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.view.tree</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="full_name"/>
                <field name="specialization_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
            </tree>
        </field>
    </record>

    <!-- Doctor Form View -->
    <record id="hr_hospital_doctor_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.view.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="full_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Personal Information">
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="age" readonly="1"/>
                        </group>
                        <group string="Contact Information">
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>
                        <group string="Professional Information">
                            <field name="specialization_id"/>
                            <field name="is_intern"/>
                            <field name="rating"/>
                        </group>
                        <group string="Mentor" invisible="not is_intern">
                            <field name="mentor_id"/>
                            <field name="mentor_specialization_id"/>
                            <field name="mentor_phone"/>
                            <field name="mentor_email"/>
                        </group>
                        <group string="License &amp; Experience">
                            <field name="license_number"/>
                            <field name="license_issue_date"/>
                            <field name="years_of_experience" readonly="1"/>
                            <field name="education_country_id"/>
                        </group>
                        <group string="System Access">
                            <field name="user_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Interns" invisible="is_intern">
                            <field name="intern_ids">
                                <kanban>
                                    <field name="full_name"/>
                                    <field name="specialization_id"/>
                                    <field name="phone"/>
                                    <field name="image_1920"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <field name="image_1920" widget="image" class="o_kanban_avatar"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong>
                                                        <field name="full_name"/>
                                                    </strong>
                                                    <div>
                                                        <field name="specialization_id"/>
                                                    </div>
                                                    <div>
                                                        <field name="phone"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Patients">
                            <field name="patient_ids">
                                <tree>
                                    <field name="full_name"/>
                                    <field name="phone"/>
                                    <field name="age"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Visits">
                            <field name="visit_ids">
                                <tree>
                                    <field name="patient_id"/>
                                    <field name="visit_date"/>
                                    <field name="disease_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Work Schedule">
                            <field name="schedule_ids">
                                <tree editable="bottom" decoration-muted="schedule_type != 'working_day'">
                                    <field name="date"/>
                                    <field name="day_of_week"/>
                                    <field name="schedule_type"/>
                                    <field name="time_from" widget="float_time"/>
                                    <field name="time_to" widget="float_time"/>
                                    <field name="notes"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctor_view_kanban" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.view.kanban</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="full_name"/>
                <field name="last_name"/>
                <field name="first_name"/>
                <field name="specialization_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="rating"/>
                <field name="is_intern"/>
                <field name="intern_ids"/>
                <field name="image_1920"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_card o_kanban_record d-flex flex-column">
                                <!-- Dropdown menu -->
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                
                                <!-- Card Header with Avatar -->
                                <div class="o_kanban_record_top mb-0">
                                    <div class="o_kanban_record_headings d-flex align-items-center">
                                        <div class="o_kanban_image me-3">
                                            <img t-att-src="kanban_image('hr.hospital.doctor', 'image_1920', record.id.raw_value)" 
                                                 alt="Doctor" 
                                                 class="o_image_64_cover rounded-circle"/>
                                        </div>
                                        <div class="flex-grow-1 min-w-0">
                                            <strong class="o_kanban_record_title d-block">
                                                <field name="full_name"/>
                                            </strong>
                                            <div class="o_kanban_record_subtitle text-muted">
                                                <field name="specialization_id"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Card Body -->
                                <div class="o_kanban_record_body mt-3">
                                    <div class="row g-0">
                                        <div class="col-6" t-if="record.phone.raw_value">
                                            <span class="text-muted small d-block mb-1">
                                                <i class="fa fa-phone me-1"/> Phone
                                            </span>
                                            <span class="small">
                                                <field name="phone"/>
                                            </span>
                                        </div>
                                        <div class="col-6" t-if="record.email.raw_value">
                                            <span class="text-muted small d-block mb-1">
                                                <i class="fa fa-envelope me-1"/> Email
                                            </span>
                                            <span class="small text-truncate d-block">
                                                <field name="email"/>
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <!-- Intern badge -->
                                    <div class="mt-2" t-if="record.is_intern.raw_value">
                                        <span class="badge rounded-pill bg-info">
                                            <i class="fa fa-graduation-cap me-1"/> Intern
                                        </span>
                                    </div>
                                    
                                    <!-- Mentor info -->
                                    <div class="mt-2" t-if="record.intern_ids.raw_value.length > 0 and !record.is_intern.raw_value">
                                        <span class="badge rounded-pill bg-success">
                                            <i class="fa fa-users me-1"/> 
                                            <t t-if="record.intern_ids.raw_value.length == 1">1 Intern</t>
                                            <t t-else=""><t t-esc="record.intern_ids.raw_value.length"/> Interns</t>
                                        </span>
                                    </div>
                                </div>
                                
                                <!-- Card Footer -->
                                <div class="o_kanban_record_bottom mt-auto pt-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="text-muted small">
                                            <i class="fa fa-id-card me-1"/> Doctor
                                        </div>
                                        <div t-if="record.rating.raw_value">
                                            <span class="badge bg-warning">
                                                <i class="fa fa-star"/> <field name="rating"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Doctor Action -->
    <record id="hr_hospital_doctor_action" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'group_by': 'specialization_id'}</field>
    </record>
</odoo>
