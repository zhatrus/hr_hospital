<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Disease Report Wizard Form View -->
    <record id="disease_report_wizard_view_form" model="ir.ui.view">
        <field name="name">disease.report.wizard.form</field>
        <field name="model">disease.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Disease Report">
                <group>
                    <group string="Period">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <group string="Filters">
                    <group>
                        <field name="doctor_ids" widget="many2many_tags"/>
                        <field name="disease_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="action_generate_report" 
                            string="Generate Report" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Disease Report Action -->
    <record id="disease_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Disease Report</field>
        <field name="res_model">disease.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="hr_hospital_doctor_disease_report_print" model="ir.actions.server">
        <field name="name">Disease Report</field>
        <field name="model_id" ref="model_hr_hospital_doctor"/>
        <field name="binding_model_id" ref="model_hr_hospital_doctor"/>
        <field name="binding_type">report</field>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code"><![CDATA[
action = env['ir.actions.actions']._for_xml_id('hr_hospital.disease_report_wizard_action')
active_ids = env.context.get('active_ids', [])
action['context'] = dict(env.context, default_doctor_ids=active_ids)
action
        ]]></field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_disease_report_wizard"
              name="Disease Report"
              parent="hr_hospital_menu_reports"
              action="disease_report_wizard_action"
              sequence="10"/>
</odoo>
