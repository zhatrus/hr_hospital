<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Patient Card Export Wizard Form View -->
    <record id="patient_card_export_wizard_view_form" model="ir.ui.view">
        <field name="name">patient.card.export.wizard.form</field>
        <field name="model">patient.card.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Patient Medical Card">
                <group>
                    <group string="Patient and Period">
                        <field name="patient_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group string="Export Options">
                        <field name="export_format"/>
                        <field name="report_lang"/>
                        <field name="include_diagnoses"/>
                        <field name="include_recommendations"/>
                    </group>
                </group>
                
                <group string="Export Result" 
                       attrs="{'invisible': [('export_file', '=', False)]}">
                    <field name="export_file" filename="export_filename" 
                           invisible="1"/>
                    <field name="export_filename" invisible="1"/>
                    <div>
                        <p>File exported successfully!</p>
                        <field name="export_file" filename="export_filename" 
                               widget="binary"/>
                    </div>
                </group>
                
                <footer>
                    <button name="action_export" 
                            string="Export" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': [('export_file', '!=', False)]}"/>
                    <button string="Close" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Patient Card Export Action -->
    <record id="patient_card_export_wizard_action" model="ir.actions.act_window">
        <field name="name">Export Medical Card</field>
        <field name="res_model">patient.card.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_hr_hospital_patient"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>
