            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rule: Адміністратор - повний доступ до пацієнтів -->
        <record id="hr_hospital_patient_admin_rule" model="ir.rule">
            <field name="name">Administrator: Full Access to Patients</field>
            <field name="model_id" ref="model_hr_hospital_patient"/>
